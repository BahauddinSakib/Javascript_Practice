@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Login</title>
    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body>
    <div class="login-box">
        <h2>Login</h2>
        <form id="loginForm" autocomplete="off">
            <!-- Dummy fields to trick password managers -->
            <input type="text" name="fakeUser" style="display:none" autocomplete="off" />
            <input type="password" name="fakePass" style="display:none" autocomplete="off" />

            <!-- Real visible fields -->
            <label for="username">Username</label><br />
            <input type="text" id="username" name="userid" autocomplete="off" required /><br /><br />

            <label for="password">Password</label><br />
            <input type="password" id="password" name="usepass" autocomplete="off" required /><br /><br />

            <button type="submit">Login</button>
        </form>

    </div>

    <script src="~/Scripts/app.js"></script>
</body>
</html>



